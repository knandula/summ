#ifndef __LOGGING_H__
#define __LOGGING_H__

#define DEBUGLEVEL 2
#define CLOG(L) \
  if(DEBUGLEVEL >= 2) \
  std::clog<<__BASE_FILE__<<"("<<__LINE__<<"): "<<L<<std::endl
#define CERR(L) \
  if(DEBUGLEVEL >= 1) \
  std::cerr<<__BASE_FILE__<<"("<<__LINE__<<"): "<<L<<std::endl

#endif
